<!-- <h2>Sign up</h2> -->

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<section id="signup" >
	<section id="signup_field">
		<section id="signup_text">
			<div>
				<!-- <%= f.label :email %>
				<br /> -->
				  <%= f.email_field :email, :autofocus => true, :placeholder => 'email',class: 'field',:required => 'required', size: 50 %></div>
<%= f.text_field :username, :autofocus => true, :placeholder => 'username',class: 'field',:required => 'required', size: 50 %></div>
				
			</div>

			<div>
				<!-- <%= f.label :password %>
				<br /> -->
				<%= f.password_field :password, :placeholder => 'Password',class: 'field',:required => 'required', size: 50 %>
			</div>

			<div>
				<!-- <%= f.label :password_confirmation %>
				<br /> -->
				<%= f.password_field :password_confirmation, :placeholder => 'Password Confirmation',class: 'field',:required => 'required', size: 50 %>
			</div>
		</section>
		<section id="signup_buttons">
					<section id="signup_check">
				<p>
					<%= check_box_tag(:terms,nil,true, class: 'field, popup')%> <a href="/registration/term">Terms and Conditions</a> 
				</p>
				<p>
					<%= check_box_tag(:policy,nil,true, class: 'field, popup')%> <a href="/registration/policy"> Agree to Privacy Policy</a>
				</p>
			</section>
		<section id="signup_btn">
			<!-- <div><%= f.submit "Sign up" %></div> -->
			<input type="image" src="/assets/buttons/register_bttn/active_register.png" alt="Submit">
		</section>
		</section>
	</section>
</section>
<% end %>

