<!-- <h2>Sign up</h2> -->
<%= render "devise/shared/adPage" %>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<section id="signup" >
	<section id="reg_all">

		<section id="reg_text" >
			<div>
				<!-- <%= f.label :email %>
				<br /> -->
				<%= f.email_field :email, :autofocus => true, :placeholder => 'email',class: 'field regular',:required => 'required', size: 50 %>
			</div>
			<%= f.text_field :username, :autofocus => true, :placeholder => 'username',class: 'field regular',:required => 'required', size: 50 %></div>

			</div>

			<div>
				<!-- <%= f.label :password %>
				<br /> -->
				<%= f.password_field :password, :placeholder => 'Password',class: 'field regular',:required => 'required', size: 50 %>
			</div>

			<div>
				<!-- <%= f.label :password_confirmation %>
				<br /> -->
				<%= f.password_field :password_confirmation, :placeholder => 'Password Confirmation',class: 'field regular',:required => 'required', size: 50 %>
			</div>
		</section>
		<section id="reg_buttons">
			<section id="reg_check" class="regular">
				<p>
					<%= check_box_tag(:terms,nil,true, class: 'regular, popup')%> <a class="check" href="/registrations/term">Terms and Conditions</a>
				</p>
				<p>
					<%= check_box_tag(:policy,nil,true, class: 'regular, popup')%> <a class="check" href="/registrations/policy"> Agree to Privacy Policy</a>
				</p>
			</section>
			<section id="reg_btn">
				<!-- <div><%= f.submit "Sign up" %></div> -->
				<input type="image" src="/assets/buttons/register_bttn/active_register_bttn.gif" alt="Submit", onclick="validateCheckbox()">
			</section>
		</section>

	</section>
</section>
<% end %>

