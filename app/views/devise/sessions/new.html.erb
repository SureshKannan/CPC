<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <section id="signup" >
	<section id="signup_field">
		<section id="signup_text">
  
  <!-- <div><%= f.label :email %><br /> -->
<%= f.text_field :signin, :autofocus => true, :placeholder => 'email OR username',class: 'field',:required => 'required', size: 50 %>
  <!-- <div><%= f.label :password %><br /> -->
  <%= f.password_field :password, :placeholder => 'password',class: 'field',:required => 'required', size: 50 %></div>
</section>
<section id="signup_buttons">
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in" %></div>

  
<% end %>

<%= render "devise/shared/links" %>
</section>
