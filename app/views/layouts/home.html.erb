<!DOCTYPE html>
<html>
	<head>
		<title>CPC Registration</title>
		<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
		<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
		<%= csrf_meta_tags %>

	</head>
	<body>
		<section id="mainContainer">
			<header>
				<ul>
					<li class="" id="white_logo">
						<%= image_tag "logo/white_logo.gif" %>
					</li>

				</ul>

			</header>

			<section id="container">
<%= yield%>
			</section>

			<footer>
				<section id="footer_img">
					<section id="collapse"></section>
					<section id="footer_arrow" >
						<a id="upArrow" href="javascript:showFooter()"> <img src="/assets/footer/ftr_arrow_up.gif"  /></a>
						<a id="downArrow" href="javascript:hideFooter()"> <img src="/assets/footer/ftr_arrow_down.gif"  /></a>
					</section>
				</section>
				<section id="footer_hide">
					<section id="footer_links">
						<ul>
							<li>
								<ul>
									<li>
										<a href="#">About Us & Contacts<img src="/assets/footer/footer_line.gif" /></a>
									</li>
									<li>
										<a href="#">Suppotr<img src="/assets/footer/footer_line.gif" /></a>
									</li>
									<li>
										<a href="#">Legal<img src="/assets/footer/footer_line.gif" /></a>
									</li>
								</ul>
							</li>
							<li>
								<ul>
									<li>
										<a href="#">Jobs<img src="/assets/footer/footer_line.gif" /></a>
									</li>
									<li>
										<a href="#">Merchants Login<img src="/assets/footer/footer_line.gif" /></a>
									</li>
									<li>
										<a href="#">Ad Polices<img src="/assets/footer/footer_line.gif" /></a>
									</li>
								</ul>
							</li>
							<li>
								<ul>
									<li>
										<a href="#">Advertise<img src="/assets/footer/footer_line.gif" /></a>
									</li>
									<li>
										<a href="#">Help<img src="/assets/footer/footer_line.gif" /></a>
									</li>
									<li>
										<a href="#">Terms & Conditions<img src="/assets/footer/footer_line.gif" /></a>
									</li>

								</ul>
							</li>
						</ul>

					</section>
					<section id="footer_email">
						<section id="footer_emailForm">
							<p class="regular">
								Keep in touch with click price.com
							</p>
							<form>
								<input type="text" placeholder="email" />
								<input type="button" />
								Sign up
							</form>
						</section>
					</section>
				</section>
			</footer>
		</section>
		<script>
			$(function()
			{
				//alert("Dialog test")
				var page = "http://localhost:3000/users/sign_in";
				var $dialog = $('<div></div>').html('<iframe style="border: 0px; " src="' + page + '" width= "100%" height="100%"></iframe> ').dialog(
				{
					autoOpen : false,
					modal : true,
					height : 500,
					width : 600
				});

				$dialog.dialog("open");
			});
			function showFooter()
			{
				//alert("Show Footer");
				$('footer').addClass('footer_up');
				$('#footer_hide').show();
				$('#upArrow').hide();
				$('#downArrow').show();

			};

			function hideFooter()
			{
				//alert("Hide Footer");
				//$('footer').addClass('footer_down');
				$('footer').removeClass('footer_up');
				$('#footer_hide').hide();
				$('#upArrow').show();
				$('#downArrow').hide();

			};

		</script>
	</body>
</html>
