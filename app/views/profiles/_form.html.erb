<%= form_for(@profile) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <section id="profile_fields">
	<section id="profile_general" >

		<table class="center">
			<th class="header">General</th>
			<tr>
				<td>
				<div class="field regular">
					<!-- <%= f.label :firstName %><br> -->
					<%= f.text_field :firstName, :placeholder => 'First Name'%>
				</div></td>
			</tr>
			<tr>
				<td>
				<div class="field regular">
					<!-- <%= f.label :lastName %><br> -->
					<%= f.text_field :lastName, :placeholder => 'Last Name' %>
				</div></td>
			</tr>
			<tr>
				<td>
				<div class="field regular">
					<%= f.text_field :aptNo, :placeholder => 'Apt number' %>
				</div></td>
			</tr>
			<tr>
				<td>
				<div class="field regular">
					<%= f.text_field :street, :placeholder => 'street' %>
				</div></td>
			</tr>
			<tr>
				<td>
				<div class="field regular">
					<%= f.text_field :city, :placeholder => 'City' %>
				</div></td>
			</tr>
			<tr>
				<td>
				<div class="field regular">
					<%= f.text_field :province, :placeholder => 'Province' %>
				</div></td>
			</tr>
			<tr>
				<td>
				<div class="field regular">
					<%= f.text_field :country, :placeholder => 'Country' %>
				</div></td>
			</tr>
			<tr>
				<td>
				<div class="field regular">
					<%= f.text_field :postalcode, :placeholder => 'Postal Code' %>
				</div></td>
			</tr>
			<tr>
				<td>
				<div class="field regular">
					<%= f.text_field :phoneNumber, :placeholder => 'Phone Number' %>
				</div></td>
			</tr>
			<tr>
				<td>
				<div class="field regular">
					<%= f.text_field :cellphone, :placeholder => 'Cell Phone' %>
				</div></td>
			</tr>

		</table>

	</section>
	<section id="profile_emailNote" >
		<table><th>Email Notification</th>
				<tr><td>
				<%= f.label "E mail Notifications", :class => 'header center'%><br />
				<% SendEmail.all.each do |e|%>
				<%= check_box_tag 'email[e_ids][]', e.id, 
				@profile.send_email_ids.include?(e.id), id: dom_id(e) %>
				<%= label_tag dom_id(e), e.name, class: "check_box_label" %>
				<% end %>
			</td></tr>
		</table>
	</section>
	<section id="profile_personal" >
		<table class="center">
			<th class="header center">Personal Information</th>
			<tr>
				<td>
				<div class="field regular">
					<!-- <%= f.label :firstName %><br> -->
					<%= f.text_field :gender, :placeholder => 'Gender'%>
				</div></td>
			</tr>
			<tr>
				<td>
				<div class="field regular">
					<!-- <%= f.label :lastName %><br> -->
					<%= f.text_field :birthday, :placeholder => 'Date of Birth' %>
				</div></td>
			</tr>
			<tr>
				<td>
				<div class="field regular">
					<%= f.text_field :ethncity, :placeholder => 'Ethnicity' %>
				</div></td>
			</tr>
			<tr>
				<td>
				<div class="field regular">
					<%= f.text_field :maritalStatus, :placeholder => 'Marital Status' %>
				</div></td>
			</tr>
			<tr>
				<td>
				<div class="field regular">
					<%= f.text_field :carrier, :placeholder => 'Carrier' %>
				</div></td>
			</tr>
			<tr><td>
				<%= f.label "Interests", :class => 'header center' %><br />
				<% Interest.all.each do |i|%>
				<%= check_box_tag 'profile[i_ids][]', i.id, 
				@profile.interest_ids.include?(i.id), id: dom_id(i) %>
				<%= label_tag dom_id(i), i.name, class: "check_box_label" %>
				<% end %>
			</td></tr>
			
			<tr><td>
				<%= f.label "Favorite Stores", :class => 'header center'%><br />
				<% FavoriteStore.all.each do |s|%>
				<%= check_box_tag 'store[s_ids][]', s.id, 
				@profile.favorite_store_ids.include?(s.id), id: dom_id(s) %>
				<%= label_tag dom_id(s), s.name, class: "check_box_label" %>
				<% end %>
			</td></tr>
			

		</table>
	</section>
	
</section>

<section id="profile_button">
	<div class="actions">
		<%= f.submit %>
	</div>
</section>

<% end %>
